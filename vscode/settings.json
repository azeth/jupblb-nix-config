{
    "workbench.colorTheme": "Gruvbox Material Hard Light",
    "window.menuBarVisibility": "toggle",
    "editor.fontLigatures": true,
    "editor.fontFamily": "'PragmataPro Mono Liga'",
    "editor.minimap.enabled": false,
    "keyboard.dispatch": "keyCode",
    "editor.fontSize": 12,
    "editor.accessibilitySupport": "off",
    "editor.hover.delay": 200,
    "editor.smoothScrolling": true,
    "editor.cursorBlinking": "smooth",
    "editor.cursorSmoothCaretAnimation": true,
    "files.maxMemoryForLargeFilesMB": 8192,
    "workbench.enableExperiments": false,
    "workbench.activityBar.visible": false,
    "zenMode.hideLineNumbers": false,
    "debug.console.fontSize": 16,
    "terminal.explorerKind": "external",
    "terminal.integrated.fontSize": 16,
    "http.proxySupport": "off",
    "git.allowForcePush": true,
    "markdown.preview.fontFamily": "-apple-system, Iosevka, BlinkMacSystemFont, 'Segoe WPC', 'Segoe UI', 'Ubuntu', 'Droid Sans', sans-serif",
    "markdown.preview.fontSize": 16,
    "terminal.external.linuxExec": "kitty",
    "metals.javaHome": "/run/current-system/pkgs/graalvm8-ce",
    "metals.sbtScript": "/run/current-system/sw/bin/sbt",
    "git.fetchOnPull": true,
    "languageServerHaskell.hieExecutablePath": "/run/current-system/sw/bin/hie",
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/*.olean": true
    }
}

