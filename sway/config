#for_window [title=".*IntelliJ.*"] floating enable
for_window [title=".*Slack.*"] layout tabbed
no_focus [title=".*Slack.*"] 
assign [title=".*Slack.*"]  1
assign [title=".*Spotify.*"]  1

default_border none
#focus_follows_mouse no

include /etc/sway/config.d/*
