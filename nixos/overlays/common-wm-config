##### COMMON CONFIGURATION #####
#
### Variables
set $mod Mod4

set $left h
set $down j
set $up k
set $right l

set $bg       #eee8d5
set $fg       #073642
set $red      #dc322f
set $green    #859900
set $yellow   #b58900
set $blue     #268bd2
set $purple   #d33682
set $aqua     #2aa198
set $dummy    #ffffff

set $term kitty

### General configuration
# class                 border  backgr text indicator child_border
client.focused          $green  $fg    $bg  $yellow   $green
client.focused_inactive $yellow $fg    $bg  $green    $yellow
client.unfocused        $yellow $fg    $bg  $green    $yellow
client.urgent           $red    $fg    $bg  $red      $red

default_border pixel 5
smart_borders on

no_focus [title=".*Ferdi.*"]
assign [title=".*Ferdi.*"] 10

### Key bindings
bindsym $mod+Return exec $term                                                      
bindsym $mod+Shift+q kill
bindsym $mod+d exec $menu
bindsym $mod+q exec $browser
bindsym $mod+Shift+c reload
bindsym $mod+Shift+e exec $wmmsg exit

bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right

bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right

bindsym $mod+s layout stacking
bindsym $mod+t layout tabbed
bindsym $mod+e layout toggle split

mode "resize" {
    bindsym $left resize shrink width 40px
    bindsym $down resize grow height 40px
    bindsym $up resize shrink height 40px
    bindsym $right resize grow width 40px

    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle
bindsym $mod+a focus parent

bindsym Print exec $print

### Status bar
bar {                                                                               
    position top                                                                    
    mode hide                                                                       
                                                                                    
    status_command exec i3status                  
                                                                                    
    separator_symbol " | "                                                          
    font pango:PragmataPro Mono Liga 11                                             
                                                                                    
    colors {                                                                        
        background $bg                                                              
        statusline $fg                                                              
                                                                                    
        # workspaces section border    background text                              
        focused_workspace    $green    $green     $fg                               
        inactive_workspace   $yellow   $bg        $fg                               
        urgent_workspace     $bg       $red       $fg                               
    }                                                                               
                                                                                    
    tray_output none                                                                
}

